<%= provide(:title, "Cadastrar") %>
<h1>Novo Usuário</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label "Nome" %>
      <%= f.text_field :name %>

      <%= f.label "Email" %>
      <%= f.email_field :email %>

      <%= f.label "Senha" %>
      <%= f.password_field :password %>

      <%= f.label "Confirmar Senha" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label "Descrição" %>
      <%= f.text_field :description %>

      <%= f.submit "Criar Conta", class: "btn btn-primary" %>
    <% end %>
    <br/>
  </div>
</div>
