<h1>Novo Usuário</h1>

<div class="row-fluid">
  <div class="span4 well">
    <%= form_for @user, :html => {:class => "form-horizontal"} do |m| %>
        <fieldset>
          <legend>Novo Usuário</legend>
          <div class="control-group">
            <%= m.label :name, :class => "control-label" %>
            <div class="controls">
              <%= m.text_field :name, :class => "input-xlarge" %>
            </div>
          </div>

          <div class="control-group">
            <%= m.label :email, :class => "control-label" %>
            <div class="controls">
              <%= m.text_field :email, :class => "input-xlarge" %>
            </div>
          </div>

          <div class="control-group">
            <%= m.label :password, :class => "control-label" %>
            <div class="controls">
              <%= m.text_field :password, :class => "input-xlarge" %>
            </div>
          </div>

          <div class="form-actions">
            <%= m.submit :class => "btn btn-primary" %>
          </div>
        </fieldset>
    <% end %>
  </div>
</div>
