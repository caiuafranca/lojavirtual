<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div>
        <p><%= @user.description %></p>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <%= form_for(@user.microposts.new) do |f| %>
      <%=  f.hidden_field :user_id, :value => @user.id %>
      <%= f.label "conteudo" %>
      <%= f.text_area :content %>
      <%= f.submit "Postar", class: "btn btn-primary" %>
    <% end %>
    <% if @user.microposts.any? %>
      <h3>Postagens (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div
